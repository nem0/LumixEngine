const PI = 3.14159265;

fn dot(a, b) {
	result = a.x * b.x + a.y * b.y + a.z * b.z;
}

fn distance(a, b) {
	let d : float3;
	d = a - b;
	result = sqrt(dot(d, d));
}

fn abs(x) {
	result = max(x, -x);
}

fn saturate(x) {
	result = max(0, min(1, x));
}

fn sphere(r) {
	let lat = random(0, 2 * PI);
	let lon = random(0, 2 * PI);
	let res : float3;
	let tmp = sin(lon) * r;
	res.x = cos(lat) * tmp;
	res.y = sin(lat) * tmp;
	res.z = cos(lon) * r;
	result = res;
}

